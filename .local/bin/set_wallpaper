#!/bin/sh

# Dependencies:
# convert wal xdotool xwallpaper 

if [ -z "$1" ]; then
  wall="$(find ~/pix/wall -type f -name "*.jpg" -o -name "*.png" | shuf -n1)"
else
  wall="$1"
fi

convert "$wall" ~/.local/share/bg.jpg
xwallpaper --zoom ~/.local/share/bg.jpg
wal -c
wal -i ~/.local/share/bg.jpg
xdotool key super+F5
