#!/bin/sh

# Dependencies:
# convert wal xdotool xwallpaper 

wall_dir=~/pix/wall

if [ -z "$1" ]; then
  wall="$1"
else
  wall=$(
  find |\
      shuf -n1
    )
fi

echo "$wall"

convert "$wall" ~/.config/wall.jpg
xwallpaper --zoom ~/.config/wall.jpg
wal -c
wal -i ~/.config/wall.jpg
xdotool key super+F5
